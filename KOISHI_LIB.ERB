;코이시용 랜덤 신음 발생기
;AUTO_AEGI가 있지만 그런건 가볍게 무시하자
@KOISHI_CLIMAX(ARG)
#DIM POST_CURR
#DIM NOW_CURR
IF 1
	POST_CURR = -1
	REPEAT ARG + 1
		$절정리롤
		NOW_CURR = RAND:16
		IF NOW_CURR == POST_CURR
			GOTO 절정리롤
		ELSE
			POST_CURR = NOW_CURR
		ENDIF
		SELECTCASE NOW_CURR
			CASE 0
				PRINTFORM 읏
			CASE 1
				PRINTFORM 앗
			CASE 2
				PRINTFORM 흐읏
			CASE 3
				PRINTFORM 히잇
			CASE 4
				PRINTFORM 히극
			CASE 5
				PRINTFORM 응히잇
			CASE 6
				PRINTFORM 응
			CASE 7
				PRINTFORM 으읏
			CASE 8
				PRINTFORM 하앙
			CASE 9
				PRINTFORM 으긋
			CASE 10
				PRINTFORM 하아
			CASE 11
				PRINTFORM 으응
			CASE 12
				PRINTFORM 흐으읏
			CASE 13
				PRINTFORM 하아아
			CASE 14
				PRINTFORM 후읏
			CASE 15
				PRINTFORM 힛
		ENDSELECT
		SELECTCASE RAND:6
			CASE 0
				PRINTFORM ...
			CASE 1
				PRINTFORM ! 
			CASE 2
				PRINTFORM ..
			CASE 3
				PRINTFORM ...! 
			CASE 4
				PRINTFORM , 
			CASE 5
				IF TALENT:연인
					PRINTFORM ♥ 
				ELSE
					PRINTFORM , 
				ENDIF
		ENDSELECT
	REND
ENDIF

;################################################################
; 코이시 전용 거절 함수
; 근데 몇번 안씀
;
;################################################################
@KOISHI_REFUSE
;커맨드 실패시 나오게 할 대사
	IF MARK:반발각인 == 3
		IF TALENT:연인
			SELECTCASE RAND:2
				CASE 0
					PRINTFORMW 「읏...저리가...」
					PRINTFORMW 코이시는 몸을 떼어놓았다
				CASE 1
					PRINTFORMW 「하지말라구...」
			ENDSELECT
		ELSE
			SELECTCASE RAND:2
				CASE 0
					PRINTFORMW 「...뭐하는짓이야...」
				CASE 1
					PRINTFORMW 「...기분나빠, 저리가줘...」
					PRINTFORMW 코이시는 %마스터를% 노려보았다
			ENDSELECT
		ENDIF
	ELSEIF TALENT:연인
		SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 「...음, 나중에 하면 안될까?」
			CASE 1
				PRINTFORMW 「...왠지 싫은걸, 다음에 해줘...」
			CASE 2
				PRINTFORMW 「싫어...그건 싫다구」
		ENDSELECT
	ELSEIF TALENT:연모||TALENT:사모||TALENT:애욕
		SELECTCASE RAND:2
			CASE 0
				PRINTFORMW 「......어...음...그런건 좀...」
			CASE 1
				PRINTFORMW 「에에...」
				PRINTFORMW 코이시는 싫어하고 있다
		ENDSELECT
	ELSEIF TALENT:섹프
		SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 「...그런건 재미없는걸」
			CASE 1
				PRINTFORMW 「...다른거 하면 안될까?」
			CASE 2
				PRINTFORMW 「아무리 그래도 이건 싫어」
		ENDSELECT
	ELSE
		SELECTCASE RAND:2
			CASE 0
				PRINTFORMW 「...어...음...」
				PRINTFORMW 코이시는 곤란한듯한 표정을 지었다
			CASE 1
				PRINTFORMW 「싫은걸? 그런거 말고 다른건 없는거야?」
		ENDSELECT
	ENDIF

;-----------------------------------
;코이시용 펠라치오 소리 생성기
;-----------------------------------
@KOISHI_ORALSEX_MAIN(ARG)
#DIM POST_CURR
#DIM NOW_CURR
POST_CURR = -1
REPEAT ARG+RAND:2
	$펠라리롤
	NOW_CURR = RAND:8
	IF NOW_CURR == POST_CURR
		GOTO 펠라리롤
	ELSE
		POST_CURR = NOW_CURR
	ENDIF
	SELECTCASE NOW_CURR
		CASE 0
			PRINTFORM 츄읍
		CASE 1
			PRINTFORM 츕
		CASE 2
			PRINTFORM 하압
		CASE 3
			PRINTFORM 낼름
		CASE 4
			PRINTFORM 하읍
		CASE 5
			PRINTFORM 흐읍
		CASE 6
			PRINTFORM 츄웁
		CASE 7
			PRINTFORM 쪽
	ENDSELECT
	SELECTCASE RAND:3
		CASE 0
			PRINTFORM ...
		CASE 1
			PRINTFORM , 
		CASE 2
			PRINTFORM  
	ENDSELECT
REND

@KOISHI_ORALSEX(ARG)
PRINTFORM 「
CALL KOISHI_ORALSEX_MAIN(ARG)
PRINTFORML  」

